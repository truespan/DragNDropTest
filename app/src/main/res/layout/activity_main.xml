<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="@dimen/spacing_medium">

    <LinearLayout
        android:id="@+id/topMostLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bottomlinear"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/algebraleft1" />

            <ImageView
                android:id="@+id/image8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/equals" />

            <LinearLayout
                android:id="@+id/drop1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/normal_shape"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/drop2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"

                android:background="@drawable/normal_shape"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/drop3"
                android:layout_marginLeft="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/normal_shape"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/drop4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:background="@drawable/normal_shape"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/drop5"
                android:layout_marginLeft="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/normal_shape"
                android:orientation="horizontal">
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/toplinear"
            android:layout_marginTop="60dp"
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/normal_shape">

            <ImageView
                android:id="@+id/asquare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/asquare" />

            <ImageView
                android:id="@+id/bsquare"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bsquare" />
            <ImageView
                android:id="@+id/twoab"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/twoab" />

            <ImageView
                android:id="@+id/plus"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plus" />

            <ImageView
                android:id="@+id/plus2"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plus2" />

            <ImageView
                android:id="@+id/minus"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/minus" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/resetView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/spacing_tiny"
        android:layout_weight="0.5"
        android:background="@drawable/generic_button_background"
        android:text="CHECK ANSWER"
        android:textColor="@android:color/white" />


</RelativeLayout>
